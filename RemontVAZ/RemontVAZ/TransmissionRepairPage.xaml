<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemontVAZ.TransmissionRepairPage"
             BackgroundImage="background.png">
    <ScrollView>
        <StackLayout>
            <Label Text="Ремонт трансмиссии,КПП" TextColor="white" FontSize="40" Margin="0, 0, 0, 30" HorizontalTextAlignment="Center"/>
            <Label Text="> Замена и ремонт сцепления" TextColor="white" FontSize="24" Margin="30, 0, 0, 0"/>
            <Label Text="> Ремонт и замена масла в МКПП" TextColor="white" FontSize="24" Margin="30, 0, 0, 0"/>
            <Label Text="> Замена масла в АКПП" TextColor="white" FontSize="24" Margin="30, 0, 0, 0"/>
            <Label Text="> Диагностика, Ремонт АКПП" TextColor="white" FontSize="24" Margin="30, 0, 0, 0"/>

            <Button x:Name="btnCheckIn" Text="Записаться на ремонт" Margin="10, 210, 10, 0" TextColor="White" BackgroundColor="Green" CornerRadius="20" FontSize="24" Clicked="btnCheckIn_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>