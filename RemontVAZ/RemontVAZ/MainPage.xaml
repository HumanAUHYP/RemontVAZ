<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemontVAZ.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Welcome to Doorka!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            
            <Label Text="Login:" FontSize="24"/>
            <Entry x:Name="Login" FontSize="24"/>
            <Label Text="Password:" FontSize="24"/>
            <Entry x:Name="Password" FontSize="24"/>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnLogin" Text="Вход" FontSize="24" Clicked="btnLogin_Clicked"/>
                <Button x:Name="btnRegister" Text="Регестрация" FontSize="24" Clicked="btnRegister_Clicked"/>
            </StackLayout>
        </StackLayout>
        
    </ScrollView>
</ContentPage>
