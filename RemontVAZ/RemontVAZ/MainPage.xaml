<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemontVAZ.MainPage"
             BackgroundImage="background.png">

    <ScrollView>
        <StackLayout>
            <Label Text="Наши услуги:" TextColor="white" FontSize="40" Margin="0, 0, 0, 30" HorizontalTextAlignment="Center"/>
            <Button x:Name="btnTO" Text="ТО" FontSize="24" Clicked="btnTO_Clicked"/>
            <Button x:Name="btnDiagnoz" Text="Диагностика двигателя" FontSize="24" Clicked="btnDiagnoz_Clicked"/>
            <Button x:Name="btnEngineRepair" Text="Ремонт двигателя" FontSize="24" Clicked="btnEngineRepair_Clicked"/>
            <Button x:Name="btnTruckRepair" Text="Ремонт подвески" FontSize="24" Clicked="btnTruckRepair_Clicked"/>
            <Button x:Name="btnMufferRepair" Text="Ремонт глушителя" FontSize="24" Clicked="btnMufferRepair_Clicked"/>
            <Button x:Name="btnTransmissionRepair" Text="Ремонт трансмиссии" FontSize="24" Clicked="btnTransmissionRepair_Clicked"/>
            
            <Button x:Name="btnAskAQuestion" Text="Задать вопрос" Margin="10, 100, 10, 0" TextColor="White" BackgroundColor="Green" CornerRadius="40" FontSize="24" Clicked="btnAskAQuestion_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
