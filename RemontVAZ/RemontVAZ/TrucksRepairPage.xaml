            <Button x:Name="btnCheckIn" Text="Записаться на ремонт" Margin="10, 270, 10, 0" TextColor="White" BackgroundColor="Green" CornerRadius="20" FontSize="24" Clicked="btnCheckIn_Clicked"/>
