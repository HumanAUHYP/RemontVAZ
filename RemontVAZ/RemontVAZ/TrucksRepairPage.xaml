        <StackLayout>
            <Label Text="Ремонт подвески" TextColor="white" FontSize="40" Margin="0, 0, 0, 30" HorizontalTextAlignment="Center"/>
            <Label Text="> Замена сайлентблоков рычага" TextColor="white" FontSize="24" Margin="30, 0, 0, 0"/>
            <Label Text="> Замена задних и передних амортизаторов" TextColor="white" FontSize="24" Margin="30, 0, 0, 0"/>
