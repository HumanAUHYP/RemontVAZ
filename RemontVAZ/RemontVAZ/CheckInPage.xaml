<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemontVAZ.CheckInPage"
             BackgroundImage="background.png">
    <ScrollView>
        <StackLayout>
            <Label Text="Записаться на ремонт" TextColor="white" FontSize="40" Margin="0, 0, 0, 30" HorizontalTextAlignment="Center"/>
            <Entry Placeholder="Ваше имя" PlaceholderColor="LightGray" TextColor="White"/>
            <Entry Placeholder="Телефон" PlaceholderColor="LightGray" TextColor="White"/>
            <Entry Placeholder="E-mail" PlaceholderColor="LightGray" TextColor="White"/>


            <Button x:Name="btnReCallMe" Text="Перезвоните мне" Margin="10, 250, 10, 0" TextColor="White" BackgroundColor="Green" CornerRadius="20" FontSize="24"/>
        </StackLayout>
    </ScrollView>
</ContentPage>